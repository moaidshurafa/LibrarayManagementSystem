@model Member
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-1">
            <h2 class="text-primary">Add Member</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Full Name</label>
            <input asp-for="FullName" class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Email</label>
            <input asp-for="Email" class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Membership Date</label>
            <input asp-for="MembershipDate" class="form-control" disabled/>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control"><i class="bi bi-plus-circle"></i> Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Member" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

