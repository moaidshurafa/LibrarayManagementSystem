@model Book
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-1">
            <h2 class="text-primary">Add Book</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Book Title</label>
            <input asp-for="Title" class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">ISBN</label>
            <input asp-for="ISBN" class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Author</label>
            <input asp-for="Author" class="form-control" disabled/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" disabled>
                <option value="">--Select Category--</option>
            </select>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Copies Available</label>
            <input asp-for="CopiesAvailable" class="form-control" disabled/>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash3-fill"></i> Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Book" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
